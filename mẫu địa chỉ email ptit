#include <stdio.h>
#include <string.h>
#include <ctype.h>
#include <stdlib.h>
void vietthuong(char *str){
  for(int i=0; str[i]; i++){
    str[i]=tolower(str[i]);
  }
}
int main(){
int t;
scanf("%d", &t);
getchar();
while(t--){
  char c[1000];
  fgets(c, sizeof(c), stdin);
  c[strcspn(c,"\n")]='\0';
  tolowercase(c);
  char a[10][100];
  int n=0; 
  char *token=strtok(c, " ");
    while(token!=NULL){
      strcpy(a[n++]; token);
      token=strtok(NULL, " ");
    }
    printf("%s"; a[n-1]);
    for(int i=0; i<n-1; i++){
      printf("%c", a[i][0]);
    }
    printf ("@ptit.edu.vn");
    printf("\n");
  }
}
    
